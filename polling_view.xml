		<record id="view_polling_asset_filter" model="ir.ui.view">
			<field name="name">view.polling.asset.filter</field>
			<field name="model">polling.asset</field>
			<field name="arch" type="xml">
				<search string="Search Asset">
					<field name="name"/>
					<field name="code"/>
					<field name='category_id' widget='selection'/>
					<group expand="0" string="Group By....">
						<filter string="Template" name="group_template_id" domain="[]" context="{'group_by':'assettemplate_id'}"/>
					</group>
				</search>
			</field>
		</record>
		
		<record id="polling_asset_form_view" model="ir.ui.view">
            <field name="name">polling.asset.form</field>
            <field name="model">polling.asset</field>
            <field name="arch" type="xml">
                <form string="Asset" version="7.0">
                    <sheet>
						<div class='oe_right oe_button_box' name='buttons'>
							<button name='repair_tree_view' type='object' string='Repairs'/>
							<button name='maintain_tree_view' type='object' string='Maintains'/>
                    		<button name='attachment_tree_view' type='object' string='Documents'/>
						</div>
                        <group col="4">
							<!--<field name="assettemplate_id" on_change="onchange_parent_get_inherit_attributes(assettemplate_id)"/>-->
							<field name="category_id"/>
                            <field name="assettemplate_id" domain="[('category_id','=',category_id)]" on_change="onchange_template_get_attributes(assettemplate_id)"/>
                            <field name="code"/>
                            <field name="name"/>
							<field name="specification"/>
							<field name="producingarea"/>
							<field name='install_area_id'/>
							<field name="install_building_id" domain="[('area_id','=',install_area_id)]"/>
							<field name="install_position_id" domain="[('polling_building_id','=',install_building_id)]"/>
							<field name="dateofproduced"/>
							<field name="service_life"/>
							<field name="dateofinstalled"/>
							<field name="buying_price"/>
							<field name="factory_number"/>
							<field name="asset_count"/>
							<field name="is_data_collect" colspan="4" invisible='1'/>
						</group>
						<group col='4' colspan='4'>
							<field name="asset_used" colspan="4"/>
						</group>
						<group col="4" string="Remark">
							<field name="remark" placeholder="Remark...." colspan="4" nolabel="1"/>
						</group>
						<notebook>
							<page string="Attributes">
								<field name="attributes">
									<tree string="Attributes" version="7.0" delete="0">
										  <field name="code"/>
										  <field name="name"/>
										  <field name="datatype"/>
										  <field name="controltype"/>
										  <field name="defaultvalue"/>
										  <field name="high"/>
										  <field name="low"/>
										  
									  </tree> 
								  </field>
							</page>                        
							<page string="Relations" invisible='1'>
								<field name="relations">
									<tree string="Relations" version="7.0" editable="bottom">
										<field name="relationtype_id"/>
										<field name="asset_id2" on_change="on_change_asset2(parent.id,asset_id2)"/>
									</tree>
								</field>
							</page>
							<page string="Actions" invisible='1'>
								<field name="actions">
									<tree string="Actions" version="7.0" editable="bottom">
										<field name="name"/>
										<field name="code"/>
										<field name="executelevel"/>
										<field name="estimatetime"/>
										<field name="ordernum"/>
										<field name="batch"/>
										<field name="command"/>
										<field name="cmdcontent"/>
									</tree> 
								</field>
							</page>
							<page name='collect_ports_page' string='Collect points'>
								<field name='collect_points' context="{'collected_asset_id':active_id}">
									<tree string='Collect points' version='7.0'>
										<field name='name'/>
										<field name='asset_id_2'/>
										<field name='attribute_id'/>
										<field name='attribute_name'/>
										<field name='attribute_code'/>
										<field name='collect_type'/>
										<field name='collect_period'/>
										<field name='collect_period_count'/>
										<field name='hasstop'/>
									</tree>
								</field>
							</page>
						</notebook>
                    </sheet>
                </form>
            </field>
        </record>

